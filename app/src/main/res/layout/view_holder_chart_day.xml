<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/chart_cell_width"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dayOfCycleText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chart_cell_height"
        android:gravity="center"
        android:maxLines="1"
        android:textAlignment="center"
        android:textSize="12sp"
        tools:text="1" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="@dimen/chart_cell_width"
        android:layout_height="@dimen/chart_cell_height"
        android:gravity="center"
        android:maxLines="1"
        android:textAlignment="center"
        android:textSize="9sp"
        tools:ignore="SmallSp"
        tools:text="11/6" />

    <LinearLayout
        android:id="@+id/stampImageWrapper"
        android:layout_width="@dimen/chart_cell_width"
        android:layout_height="@dimen/chart_cell_height"
        android:gravity="center">

        <ImageView
            android:id="@+id/stampImage"
            android:layout_width="@dimen/stamp_size"
            android:layout_height="@dimen/stamp_size"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_circle_peak_mucus" />
    </LinearLayout>

    <TextView
        android:id="@+id/sensationText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chart_cell_height"
        android:gravity="center"
        android:maxLines="1"
        android:textAlignment="center"
        android:textSize="12sp"
        tools:text="D" />
</LinearLayout>