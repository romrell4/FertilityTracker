<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SymptomButton">
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:backgroundTint">@color/purple</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="TemperatureEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/temp_text_width</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
    </style>

    <style name="CycleTableHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/chart_cell_height</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>